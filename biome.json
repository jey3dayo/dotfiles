{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.js",
      "**/*.mjs",
      "**/*.cjs",
      "**/*.mts",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.json",
      "!raycast/**",
      "!.vimperator/**",
      "!rest-client/**",
      "!karabiner/**",
      "!Brewfile.lock.json"
    ],
    "experimentalScannerIgnores": [
      ".cache",
      "dist",
      "node_modules",
      "raycast",
      ".vimperator",
      "tmux",
      "fisher",
      "karabiner",
      "rest-client"
    ],
    "maxSize": 2097152
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
