{
  "$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.js",
      "**/*.mjs",
      "**/*.cjs",
      "**/*.mts",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.json",
      "!raycast/**",
      "!.vimperator/**",
      "!rest-client/**"
    ],
    "experimentalScannerIgnores": [
      ".cache",
      "dist",
      "node_modules",
      "src/gen",
      "jest.config.js",
      "Brewfile.lock.json",
      "karabiner/**",
      "rest-client/**",
      "raycast/**",
      ".vimperator/**",
      "tmux/plugins/**",
      "fisher/**",
      "zsh/.zinit/**",
      "claude/local/node_modules/**",
      "treefmt.toml"
    ],
    "maxSize": 2097152
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
