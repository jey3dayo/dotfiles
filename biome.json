{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "files": {
    "include": ["**/*.ts", "**/*.js", "**/*.mjs", "**/*.cjs", "**/*.mts", "**/*.jsx", "**/*.tsx", "**/*.json"],
    "ignore": [
      ".cache",
      "dist",
      "node_modules",
      "src/gen",
      "jest.config.js",
      "Brewfile.lock.json",
      "karabiner/**",
      "rest-client/**",
      "raycast/**",
      ".vimperator/**",
      "tmux/plugins/**",
      "fisher/**",
      "zsh/.zinit/**",
      "claude/local/node_modules/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  }
}
