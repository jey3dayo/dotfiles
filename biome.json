{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "files": {
    "include": ["**/*.ts", "**/*.js", "**/*.json", "raycast/**"],
    "ignore": [".cache", "dist", "node_modules", "src/gen", "jest.config.js"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  }
}
