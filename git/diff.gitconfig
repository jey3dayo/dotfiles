[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  side-by-side = true
  navigate = true
  light = false
  syntax-theme = gruvbox-dark

[merge]
    conflictstyle = diff3

[diff]
  algorithm = histogram
  colorMoved = plain
  ; colorMoved = default
  mnemonicPrefix = true
  renames = true
