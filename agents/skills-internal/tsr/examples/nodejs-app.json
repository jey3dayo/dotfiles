{
  "version": "1.0.0",
  "tsconfig": "tsconfig.json",
  "ignoreFile": ".tsrignore",
  "entryPatterns": ["src/.*\\.ts$"],
  "maxDeletionPerRun": 10,
  "includeDts": false,
  "recursive": false,
  "ignorePatterns": ["src/scripts/**", "src/migrations/**"],
  "verification": {
    "typeCheck": true,
    "lint": true,
    "test": true
  },
  "reporting": {
    "outputPath": "/tmp/tsr-report-{date}.txt",
    "verbose": false
  },
  "framework": {
    "type": "node"
  }
}
