    {
      "name": "Go API",
      "description": "Go language API server",
      "priority": 90,
      "detectors": [
        {
          "type": "file_exists",
          "path": "go.mod",
          "condition": "required"
        },
        {
          "type": "file_pattern",
          "pattern": "**/*_handler.go",
          "condition": "optional"
        }
      ],
      "techStack": ["go"],
      "skills": [
        {
          "name": "golang",
          "priority": "high",
          "focus": ["error_handling", "concurrency", "idioms"]
        },
        {
          "name": "security",
          "priority": "high",
          "focus": ["input_validation", "auth", "data_protection"]
        }
      ],
      "evaluation": {
        "weights": {
          "code_quality": 0.2,
          "security": 0.25,
          "performance": 0.2,
          "testing": 0.05,
          "error_handling": 0.15,
          "architecture": 0.15
        },
        "guidelines": ["evaluation-guidelines.md", "golang/guidelines.md", "security/guidelines.md"]
      }
    },
    {
      "name": "Go Clean Architecture",
      "description": "Go API with Clean Architecture pattern",
      "priority": 95,
      "detectors": [
        {
          "type": "file_exists",
          "path": "go.mod",
          "condition": "required"
        },
        {
          "type": "directory_structure",
          "path": "domain",
          "condition": "required"
        },
        {
          "type": "directory_structure",
          "path": "usecase",
          "condition": "required"
        },
        {
          "type": "directory_structure",
          "path": "infrastructure",
          "condition": "required"
        }
      ],
      "techStack": ["go", "clean-architecture"],
      "skills": [
        {
          "name": "golang",
          "priority": "high",
          "focus": ["error_handling", "concurrency", "idioms"]
        },
        {
          "name": "clean-architecture",
          "priority": "medium",
          "focus": ["layer_separation", "dependency_rule", "domain_modeling"]
        },
        {
          "name": "security",
          "priority": "high",
          "focus": ["input_validation", "auth", "data_protection"]
        }
      ],
      "evaluation": {
        "weights": {
          "code_quality": 0.2,
          "security": 0.25,
          "performance": 0.2,
          "testing": 0.05,
          "error_handling": 0.15,
          "architecture": 0.15
        },
        "guidelines": [
