{
  "$schema": "../schemas/project-detection-schema.json",
  "projects": [
    {
      "name": "Next.js Fullstack",
      "description": "Next.js application with full-stack features",
      "priority": 100,
      "detectors": [
        {
          "type": "package_dependency",
          "dependency": "next",
          "condition": "required"
        },
        {
          "type": "file_exists",
          "path": "package.json",
          "condition": "required"
        }
      ],
      "techStack": ["typescript", "react", "next"],
      "skills": [
        {
          "name": "typescript",
          "priority": "high",
          "focus": ["type_safety", "strict_mode", "type_guards"]
        },
        {
          "name": "react",
          "priority": "high",
          "focus": ["hooks", "performance", "component_design"]
        },
        {
          "name": "security",
          "priority": "high",
          "focus": ["input_validation", "auth", "data_protection"]
        }
      ],
      "evaluation": {
        "weights": {
          "code_quality": 0.2,
          "security": 0.2,
          "performance": 0.15,
          "testing": 0.15,
          "error_handling": 0.15,
          "architecture": 0.15
        },
        "guidelines": [
          "evaluation-guidelines.md",
          "typescript/guidelines.md",
          "react/guidelines.md",
          "security/guidelines.md"
        ]
      }
    },
    {
      "name": "React SPA",
      "description": "React Single Page Application",
      "priority": 80,
      "detectors": [
        {
          "type": "package_dependency",
          "dependency": "react",
          "condition": "required"
        },
        {
          "type": "file_exists",
          "path": "package.json",
          "condition": "required"
        }
      ],
      "techStack": ["typescript", "react"],
      "skills": [
        {
          "name": "typescript",
          "priority": "high",
          "focus": ["type_safety", "strict_mode"]
        },
        {
          "name": "react",
          "priority": "high",
          "focus": ["hooks", "performance", "component_design", "a11y"]
        },
        {
          "name": "security",
          "priority": "medium",
          "focus": ["xss_prevention", "secure_storage"]
        }
      ],
      "evaluation": {
        "weights": {
          "code_quality": 0.25,
